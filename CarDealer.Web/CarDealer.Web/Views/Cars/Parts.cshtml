@model CarPageListingModel
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link" href="/cars/parts?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @{
        var firstListPage = (Model.CurrentPage - 5) > 0 ? Model.CurrentPage - 5 : 1;
        var lastListPage = (Model.CurrentPage + 5) < Model.TotalPages ? (Model.CurrentPage + 5) : Model.TotalPages;
        var currentPage = Model.CurrentPage;

        if (currentPage < 5)
        {
            lastListPage += (5 - currentPage);
        }

        if (currentPage > Model.TotalPages - 5)
        {
            firstListPage -= (5 - (Model.TotalPages - currentPage));
        }

        for (int i = firstListPage; i <= lastListPage; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active":string.Empty)"><a class="page-link" href="/cars/parts?page=@i">@i</a></li>
        }
    }
    <li class="page-item @nextDisabled">
        <a class="page-link" href="/cars/parts?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>

@{
    ViewData["Title"] = "All Cars With Their Parts";
}
<h2>
    @ViewData["Title"]
    <a href="/cars/create" class="btn btn-primary">Add Car</a>
</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
            <th>
                Parts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in @Model.Cars)
        {
            <tr>
                <td>
                    <a href="/cars/Makes/@car.Make">@car.Make</a>
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @car.TravelledDistance
                </td>
                <td>
                    <ul>
                        @foreach (var part in car.Parts)
                        {
                            <li>@part.Name - $@part.Price</li>
                        }
                    </ul>
                </td>
                <td><a href="/cars/delete/@car.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
