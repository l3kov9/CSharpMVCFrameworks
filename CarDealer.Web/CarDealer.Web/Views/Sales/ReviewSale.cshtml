@model ReviewSaleViewModel
@{
    ViewData["Title"] = "Review Sale";
}

<h2>Review Sale</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" disabled />
        <span asp-validation-for="CustomerName" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car"></label>
        <input asp-for="Car" class="form-control" disabled />
        <span asp-validation-for="Car" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount"></label>
        <input asp-for="Discount" class="form-control" disabled />
        <span asp-validation-for="Discount" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarPrice"></label>
        <input asp-for="CarPrice" class="form-control" disabled/>
        <span asp-validation-for="CarPrice" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FinalCarPrice"></label>
        <input asp-for="FinalCarPrice" class="form-control" disabled />
        <span asp-validation-for="FinalCarPrice" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save Sale" />
    </div>
</form>

