@model CustomerFormModel

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsYoungDriver" />
        <label asp-for="IsYoungDriver"></label>
        <span asp-validation-for="IsYoungDriver" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save customer" />
    </div>
</form>

